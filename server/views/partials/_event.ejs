<div class="detailcontainer">
  <div class="smalldetails-container">
    <a class="smalldetails-link" href="/events/<%=event.id%>">
    <div class="smalldetails-header">
      <h3 class="smalldetails-title"><%= event.title %></h3>
      <span class="smalldetails-attendees"><%= event.count %> Going</span>
    </div>
    <div class="smalldetails-body">
      <span class="smalldetails-date"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= moment(event.date_time).format("ddd MMMM Do YYYY") %></span>
      <span class="smalldetails-time"> <%= moment(event.date_time).format("h:mm a") %></span>
      <span class="smalldetails-location"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= event.location %></span>
      <span class="smalldetails-body"><i class="fa fa-sticky-note" aria-hidden="true"></i> <%= event.description %></span>
    </div>
    <div class="smalldetails-footer">
      <% if (user&&user.id===person.id) { %>
      <form class="cancel-form" action="/events/<%=event.id%>/cancel" method="POST" >
        <button type="submit" class="btn btn-danger rsvp-btn">Can't Go</button>
      </form>
      <% }else{ %>
        <a class="btn btn-primary rsvp-btn" href="/events/<%=event.id%>">Check it Out</a>
      <%}%>
    </div>
  </div>
  </a>

  <script>
    $('.cancel-form').on('submit', function() {
      $('.rsvp-btn').prop('disabled', true)
    })
  </script>
</div>
